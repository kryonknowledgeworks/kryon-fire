{
  "swagger": "2.0",
  "info": {
    "title": "APIs for KryonFire Server Version-1",
    "description": "This API Document contains the FHIR server api.",
    "version": "1.0"
  },
  "basePath": "/api/v1",
  "schemes": [
    "http",
    "https"
  ],
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/resource/create/{resource_type}": {
      "post": {
        "tags": [
          "FHIR"
        ],
        "summary": "Create a resource",
        "parameters": [
          {
            "in": "path",
            "name": "resource_type",
            "type": "string",
            "enum": [
              "Patient",
              "Practitioner",
              "Organization",
              "Encounter",
              "serviceRequest",
              "Appointment"
            ],
            "required": true,
            "description": "type of resource"
          },
          {
            "in": "body",
            "name": "body",
            "description": "Resource object",
            "required": true,
            "schema": {
              "type": "object"
            }
          }
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "Successful response.",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/resource/read/{resource_type}": {
      "get": {
        "tags": [
          "FHIR"
        ],
        "summary": "Returns a single resource",
        "description": "Returns a single resource",
        "operationId": "getSingleResource",
        "consumes": [
          "application/fhir+json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "path",
            "name": "resource_type",
            "type": "string",
            "enum": [
              "Patient",
              "Practitioner",
              "Organization",
              "Encounter",
              "serviceRequest",
              "Appointment"
            ],
            "required": true,
            "description": "type of resource"
          },
          {
            "name": "resource_id",
            "in": "query",
            "description": "ID of resource to return",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "examples": {
              "application/json": {
                "id": "123",
                "name": "John Doe",
                "email": "johndoe@example.com"
              }
            }
          }
        }
      }
    }
  }
}
